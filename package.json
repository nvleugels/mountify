{
  "name": "mountify",
  "version": "1.0.17",
  "description": "A free, open-source Windows application for mounting SFTP servers as local drives",
  "main": "electron/main.js",
  "author": "Mountify",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "node-fetch": "^3.3.2",
    "electron-updater": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.mountify.app",
    "productName": "Mountify",
    "artifactName": "${productName}.Setup.${ext}",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "images/mountify.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "images",
      "output": "release"
    },
    "extraResources": [
      {
        "from": "images/",
        "to": "images",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "nvleugels",
        "repo": "mountify"
      }
    ]
  }
}
